@page "/update/{id}"

@using AplicacaoFullStack.Models
@inject NavigationManager NavigationManager;
@inject AplicacaoFullStack.Services.IClienteService ClienteService;

<h1>Atualizar cadastro do cliente</h1>

<EditForm Model="cliente" OnValidSubmit="UpdateCliente">
    <div class="form-group mb-3">
        <label for="clienteNome">Nome</label> 
        <input type="text" @bind="cliente.nome" class="form-control" id="clienteNome"/>
    </div>
    <div class="form-group mb-3">
        <label for="clienteTelefone">Telefone</label> 
        <input type="text" @bind="cliente.telefone" class="form-control" id="clienteTelefone"/>
    </div>
    <div class="form-group mb-3">
        <label for="clienteEmail">Email</label> 
        <input type="text" @bind="cliente.email" class="form-control" id="clienteEmail"/>
    </div>

    <DataAnnotationsValidator />
    <ValidationSummary />

    <button class="btn btn-success" type="submit">Atualizar dados</button>

</EditForm>

@code {
    Cliente cliente = new();

    [Parameter]public string id{ get; set; }

    protected override async Task OnInitializedAsync()
    {
        cliente = await ClienteService.GetBy(Guid.Parse(id));
    }

    async Task UpdateCliente()
    {
        await ClienteService.Update(cliente);

        NavigationManager.NavigateTo("/");
    }
}
